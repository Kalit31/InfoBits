<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.suryansh.infobits" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/infobits"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Cover"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".homepage"
            android:label="@string/app_name"
            android:logo="@mipmap/infobits"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LibRes"
            android:label="@string/libres"
            android:logo="@mipmap/libr"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>

        <activity
            android:name=".ConnectWithLibrary"
            android:label="@string/title_activity_communication_panel"
            android:parentActivityName=".homepage"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>

        <activity
            android:name=".DailyNews"
            android:label="@string/title_activity_daily_news"
            android:parentActivityName=".homepage"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>

        <activity
            android:name=".CommForms"
            android:label="CommForm"
            android:parentActivityName=".ConnectWithLibrary"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>
        <activity
            android:name=".login"
            android:label="@string/Login"
            android:parentActivityName=".homepage"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>
        <activity
            android:name=".user_settings"
            android:label="@string/title_activity_user_settings"
            android:parentActivityName=".homepage"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>
        <activity
            android:name=".signup"
            android:label="@string/Signup"
            android:parentActivityName=".homepage"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.suryansh.infobits.homepage" />
        </activity>
        <!--
     ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
