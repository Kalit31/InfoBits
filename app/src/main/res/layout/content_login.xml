<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.suryansh.infobits.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Username"
        android:id="@+id/tx_user"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tx_pass"
        android:layout_alignStart="@+id/tx_pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Password"
        android:id="@+id/tx_pass"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tx_user"
        android:layout_alignLeft="@+id/bt_login"
        android:layout_alignStart="@+id/bt_login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/bt_login"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/tx_pass"
        android:layout_toLeftOf="@+id/bt_forgot"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OnClickLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/bt_forgot"
        android:layout_alignTop="@+id/bt_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="OnClickForgot" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_user"
        android:width="300dp"
        android:layout_above="@+id/tx_pass"
        android:layout_alignLeft="@+id/bt_forgot"
        android:layout_alignStart="@+id/bt_forgot" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ed_pass"
        android:layout_alignBottom="@+id/tx_pass"
        android:layout_alignLeft="@+id/ed_user"
        android:layout_alignStart="@+id/ed_user"
        android:width="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIGN IN"
        android:id="@+id/tx_sign"
        android:layout_above="@+id/ed_user"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
