<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suryansh.infobits.homepage"
    android:id="@+id/drawer_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/nav_toolbar" app:logo="@mipmap/libr"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#e0dfeb"
            android:layout_below="@+id/nav_toolbar"
            android:id="@+id/libricons"
            android:layout_margin="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/taylorFrancis"
                android:src="@mipmap/opac"
                android:onClick="onClickOPAC"
                android:scaleType="fitCenter"
                android:minHeight="120dp"
                android:minWidth="120dp"
                android:background="#211d70"
                android:layout_margin="25dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scienceDirect"
                android:src="@drawable/odxii"
                android:onClick="onClickOD"
                android:clickable="true"
                android:background="#211d70"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_toRightOf="@+id/taylorFrancis" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openAccess"
                android:onClick="onClickEB"
                android:src="@drawable/ebxii"
                android:background="#211d70"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/taylorFrancis" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/springer"
                android:onClick="onClickIR"
                android:src="@drawable/irxii"
                android:background="#211d70"
                android:layout_alignLeft="@+id/scienceDirect"
                android:layout_alignTop="@+id/openAccess" />

        </RelativeLayout>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navigation_drawer_header"
        >
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tag"
            android:layout_marginTop="517dp"
            android:src="@drawable/tag" />
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
