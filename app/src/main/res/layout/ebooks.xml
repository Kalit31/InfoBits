<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.bitspilani.library.infobits.ebooks"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:fitsSystemWindows="true"
        android:layout_height="@dimen/app_bar_height"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:baselineAligned="false"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_collapseMode="pin"
            app:logo="@mipmap/logo"
            android:title="@string/title_activity_ebooks"
            android:textColor="#fff"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To access eBooks, please click any of them"
        android:id="@+id/textView7"
        android:layout_margin="10dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:background="#e9e9e9"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:rowCount="3"
        android:columnCount="3"
        android:alignmentMode="alignBounds"
        android:contextClickable="false"
        android:id="@+id/gridView">


        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/intech"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@mipmap/intech"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:contentDescription="@string/intech"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/openAccess"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@mipmap/open"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:contentDescription="@string/openaccess"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/openTB"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@mipmap/opentb"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/springer"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@mipmap/springer400"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pearsonEducation"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@mipmap/pearson_education"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/taylorFranics"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@mipmap/taylor_francis"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ebsco"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@mipmap/ebsco"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="To access EBSCO ebooks, use:"
                android:id="@+id/textView8"
                android:lines="2"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CLICLK HERE"
                android:id="@+id/ebscoClickHere"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username: bpilani"
                android:id="@+id/textView9"
                android:paddingTop="10dp" />

            <TextView
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Password: $bitspilani$1"
                android:id="@+id/textView10"
                android:paddingTop="5dp" />

        </LinearLayout>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scienceDirect"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@mipmap/science_direct"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="onClick" />


    </GridLayout>


</LinearLayout>
