<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:fitsSystemWindows="true"
        android:layout_height="@dimen/app_bar_height"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:title="@string/Login"
        android:baselineAligned="false"
        android:background="@color/colorPrimaryDark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:title="@string/Login"
            android:textColor="#FFF"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:indeterminate="false" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#ddd"
        android:layout_below="@+id/app_bar"
        android:layout_margin="10dp"
        android:id="@+id/CommForm">


        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddd"
                android:padding="10dp"
                android:id="@+id/bookLayout">


            </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#001589"
            android:textSize="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/bt_signin"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:onClick="OnClick_sign_in"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pass"
            android:layout_marginTop="40dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="#001589"
            android:backgroundTint="@color/colorPrimaryDark"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textSize="20dp"
            android:id="@+id/bt_forgot"
            android:onClick="OnClick_forgot_pass"
            android:layout_below="@+id/bt_signin"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/pass"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:background="#fff"
            android:padding="5dp"
            android:textSize="25sp"
            android:hint="Password"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/email"
            android:layout_gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:background="#fff"
            android:padding="5dp"
            android:textSize="25sp"
            android:hint="Bits Mail"
            android:layout_below="@+id/bookLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />


    </RelativeLayout>


</RelativeLayout>



